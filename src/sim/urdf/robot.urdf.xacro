<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="my_robot">

    <xacro:include filename="ros2_control.xacro" />

    <!-- BASE LINK (free floating) -->
    <link name="base_link"></link>

    <!-- BODY LINK (chassis) -->
    <joint name="base_to_body" type="fixed">
        <parent link="base_link"/>
        <child link="body_link"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>
    <link name="body_link">
    <visual>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <geometry>
            <box size="1.5 1 0.3"/>   
        </geometry>
        <material name="blue">
            <color rgba="0 0 1 1"/>
        </material>
    </visual>
    <collision>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <geometry>
            <box size="1.5 1 0.3"/>   
        </geometry>
    </collision>
    <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="10.0"/>
        <inertia ixx="0.916" ixy="0.0" ixz="0.0" iyy="1.979" iyz="0.0" izz="2.708"/>
    </inertial>
    </link>

    <gazebo reference="body_link">
        <material>Gazebo/Blue</material>
    </gazebo>

    <link name="left_front_wheel_link">
    <visual>
        <origin xyz="0.0 0.0 0.0" rpy="1.57 0.0 0.0"/>
        <geometry>  
            <cylinder radius="0.2" length="0.1"/>
        </geometry>
        <material name="black">
            <color rgba="0 0 0 1"/>
        </material>
    </visual>
    <collision>
        <origin xyz="0.0 0.0 0.0" rpy="1.57 0.0 0.0"/>
        <geometry>  
            <cylinder radius="0.2" length="0.1"/>
        </geometry>
        <surface>
            <friction>
                <ode>
                    <mu>1.0</mu>
                    <mu2>1.0</mu2>
                </ode>
            </friction>
        </surface>
    </collision>
    <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.5"/>
        <inertia ixx="0.00625" ixy="0.0" ixz="0.0" iyy="0.00625" iyz="0.0" izz="0.01"/>
    </inertial>
    </link>

    <gazebo reference="left_front_wheel_link">
        <material>Gazebo/Black</material>
        <mu1>1.0</mu1>
        <mu2>1.0</mu2>
    </gazebo>
    
    <joint name="body_to_left_front_wheel" type="continuous">
        <parent link="body_link"/>
        <child link="left_front_wheel_link"/>
        <origin xyz="0.55 -0.55 -0.15" rpy="0.0 0.0 0.0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <link name="left_back_wheel_link">
    <visual>
        <origin xyz="0.0 0.0 0.0" rpy="1.57 0.0 0.0"/>
        <geometry>  
            <cylinder radius="0.2" length="0.1"/>
        </geometry>
        <material name="black">
            <color rgba="0 0 0 1"/>
        </material>
    </visual>
    <collision>
        <origin xyz="0.0 0.0 0.0" rpy="1.57 0.0 0.0"/>
        <geometry>  
            <cylinder radius="0.2" length="0.1"/>
        </geometry>
        <surface>
            <friction>
                <ode>
                    <mu>1.0</mu>
                    <mu2>1.0</mu2>
                </ode>
            </friction>
        </surface>
    </collision>
    <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.5"/>
        <inertia ixx="0.00625" ixy="0.0" ixz="0.0" iyy="0.00625" iyz="0.0" izz="0.01"/>
    </inertial>
    </link>

    <gazebo reference="left_back_wheel_link">
        <material>Gazebo/Black</material>
        <mu1>1.0</mu1>
        <mu2>1.0</mu2>
    </gazebo>

    <joint name="body_to_left_back_wheel" type="continuous">
        <parent link="body_link"/>
        <child link="left_back_wheel_link"/>
        <origin xyz="-0.55 -0.55 -0.15" rpy="0.0 0.0 0.0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <link name="right_front_wheel_link">
    <visual>
        <origin xyz="0.0 0.0 0.0" rpy="1.57 0.0 0.0"/>
        <geometry>  
            <cylinder radius="0.2" length="0.1"/>
        </geometry>
        <material name="black">
            <color rgba="0 0 0 1"/>
        </material>
    </visual>
    <collision>
        <origin xyz="0.0 0.0 0.0" rpy="1.57 0.0 0.0"/>
        <geometry>  
            <cylinder radius="0.2" length="0.1"/>
        </geometry>
        <surface>
            <friction>
                <ode>
                    <mu>1.0</mu>
                    <mu2>1.0</mu2>
                </ode>
            </friction>
        </surface>
    </collision>
    <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.5"/>
        <inertia ixx="0.00625" ixy="0.0" ixz="0.0" iyy="0.00625" iyz="0.0" izz="0.01"/>
    </inertial>
    </link>

    <gazebo reference="right_front_wheel_link">
        <material>Gazebo/Black</material>
        <mu1>1.0</mu1>
        <mu2>1.0</mu2>
    </gazebo>
    
    <joint name="body_to_right_front_wheel" type="continuous">
        <parent link="body_link"/>
        <child link="right_front_wheel_link"/>
        <origin xyz="0.55 0.55 -0.15" rpy="0.0 0.0 0.0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <link name="right_back_wheel_link">
    <visual>
        <origin xyz="0.0 0.0 0.0" rpy="1.57 0.0 0.0"/>
        <geometry>  
            <cylinder radius="0.2" length="0.1"/>
        </geometry>
        <material name="black">
            <color rgba="0 0 0 1"/>
        </material>
    </visual>
    <collision>
        <origin xyz="0.0 0.0 0.0" rpy="1.57 0.0 0.0"/>
        <geometry>  
            <cylinder radius="0.2" length="0.1"/>
        </geometry>
        <surface>
            <friction>
                <ode>
                    <mu>1.0</mu>
                    <mu2>1.0</mu2>
                </ode>
            </friction>
        </surface>
    </collision>
    <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.5"/>
        <inertia ixx="0.00625" ixy="0.0" ixz="0.0" iyy="0.00625" iyz="0.0" izz="0.01"/>
    </inertial>
    </link>

    <gazebo reference="right_back_wheel_link">
        <material>Gazebo/Black</material>
        <mu1>1.0</mu1>
        <mu2>1.0</mu2>
    </gazebo>

    <joint name="body_to_right_back_wheel" type="continuous">
        <parent link="body_link"/>
        <child link="right_back_wheel_link"/>
        <origin xyz="-0.55 0.55 -0.15" rpy="0.0 0.0 0.0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <link name="camera_link">
    <visual>
        <geometry>
            <box size="0.1 0.3 0.2"/>   
        </geometry>
        <material name="gray">
            <color rgba="0.5 0.5 0.5 1"/>
        </material>
    </visual>
    <collision>
        <geometry>
            <box size="0.1 0.3 0.2"/>   
        </geometry>
    </collision>
    <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.1"/>
        <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
    </link>

    <gazebo reference="camera_link">
        <material>Gazebo/Grey</material>
    </gazebo>
    
    <joint name="body_to_camera" type="fixed">
        <parent link="body_link"/>
        <child link="camera_link"/>
        <origin xyz="0.65 0 0.3" rpy="0 0 0"/>
    </joint>

        <joint name="camera_optical_joint" type="fixed">
        <origin xyz="0 0 0" rpy="-1.571 0 -1.571" />
        <parent link="camera_link" />
        <child link="camera_link_optical" />
    </joint>

    <link name="camera_link_optical"></link>

    <gazebo reference="camera_link">
        <sensor type="camera" name="my_camera">
            <update_rate>20</update_rate>
            <visualize>true</visualize>
            <camera name="cam">
                <horizontal_fov>1.3962634</horizontal_fov>
                <image>
                    <width>640</width>
                    <height>480</height>
                    <format>R8B8G8</format>
                </image>
                <clip>
                    <near>0.02</near>
                    <far>300</far>
                </clip>
                <noise>
                    <type>gaussian</type>
                    <mean>0.0</mean>
                    <stddev>0.007</stddev>
                </noise>
            </camera>
            <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
                <frame_name>camera_link_optical</frame_name>
                <min_depth>0.1</min_depth>
                <max_depth>500</max_depth>
            </plugin>
        </sensor>
    </gazebo>



</robot>